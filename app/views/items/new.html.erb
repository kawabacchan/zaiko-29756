<div class="wrapper">

  <div class= "side-bar">
    <%= render "side_bar"%>
  </div>

  <div class="item-display">

    <div class="item-header">
      <div class="item-header-title">
        商品 > 登録
      </div>
      <div class="item-form-and-error">
        <%= form_with model:@item, local: true do |f| %>
          <%= render "error_messages", model: f.object %>
          <ul class="item-form">
            <li><p>カテゴリー</p><%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"category-select"}) %></li>
            <li><p>商品コード</p><%= f.text_field :code %></li>
            <li><p>商品名</p><%= f.text_field :name %></li>
            <li><p>在庫数</p><%= f.number_field :stock, min:0 %></li>
            <li><p>想定月間販売数</p><%= f.number_field :monthly_sales, min:0 %></li>
            <li><p>商品作成日数</p><%= f.number_field :creation_days, min:0 %></li>
            <li><%= f.submit "登録", class:"item-form-btn"%></li>
          </ul>
        <% end %>
      </div>
    </div>

    <div class="item-display-contents">
      <div class="sort-by-code", id="sort-by-code-display">
        <% @items.each do |item|%>
          <% if item.stock <= (item.monthly_sales * 0.1)+ 3 %>
            <div class="item-distplay-content red">
              <%= item.category.name %>
              <%= item.code%>
              <%= item.name%>
              <%= item.stock%>
              <%= item.monthly_sales%>
              <%= item.creation_days%>
              <%=link_to "編集", edit_item_path(item.id) %>
            </div>
          <% elsif item.stock <= item.monthly_sales * 0.5 %>
            <div class="item-distplay-content yellow">
              <%= item.category.name %>
              <%= item.code%>
              <%= item.name%>
              <%= item.stock%>
              <%= item.monthly_sales%>
              <%= item.creation_days%>
              <%=link_to "編集", edit_item_path(item.id) %>
            </div>
          <% else %>
            <div class="item-distplay-content">
              <%= item.category.name %>
              <%= item.code%>
              <%= item.name%>
              <%= item.stock%>
              <%= item.monthly_sales%>
              <%= item.creation_days%>
              <%=link_to "編集", edit_item_path(item.id) %>
            </div>
          <%end%>
        <% end %>
      </div>
  </div>
</div>