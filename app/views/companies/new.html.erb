<div class="wrapper">
  <div class= "side-bar">
    <%= render "items/side_bar" %>
  </div>

  <div class="main-display">
    <div class="top-display">
      <div class="top-display-title">
        企業 > 登録
      </div>
      <div class="item-form-and-error">
        <%= form_with model: @company, local: true do |f| %>
          <%= render "items/error_messages", model: f.object %>
          <table>
            <tr>
              <th class="th-item-category">企業名</th>
            </tr>
            <tr>
              <td><%= f.text_field :name, class:"item-name-form item-form" %></td>
              <td><%= f.submit "登録", class:"item-submit-form item-form" %></td>
            </tr>
          </table>
        <% end %>
      </div>
      <div class="import-file">
        <p>企業登録（.xlsxファイル）</p>
        <%= form_with url:import_companies_path, local: true do |f| %>
          <%= f.file_field :file, accept: ".xlsx" %>
          <%= f.submit "インポート"%>
        <% end %>
      </div>
    </div>

    <div class="lower-display">

      <div class="sort-by-code", id="sort-by-code-display">
        <%if @companies %>
          <table>
            <tr>
              <th class="th-company-name">商品名</th>
            </tr>
            <% @companies.each do |company|%>
              <div class="company-display-content">
                <tr>
                  <td><%= company.name %></td>
                  <td><%=link_to "店舗登録", new_company_shop_path(company.id) %></td>
                  <td><%=link_to "編集", edit_company_path(company.id) %></td>
                  <td><%=link_to "削除", company_path(company.id), method: :delete %></td>
                </tr>
              </div>
            <% end %>
          </table>
        <% else %>
          <p>登録企業なし</p>
        <% end %>
      </div>

    </div>
  </div>
</div>