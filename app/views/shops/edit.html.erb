<div class="wrapper">
  <div class= "side-bar">
    <%= render "items/side_bar"%>
  </div>

  <div class="main-display">
    <div class="top-display">
      <div class="top-display-title">
        <%= @company.name %> > 店舗 > 編集
      </div>
    </div>

    <div class="lower-display">

      <div class="sort-by-code", id="sort-by-code-display">
        <%if @shops.present? %>
          <table>
            <tr class="first-row">
              <th class="th-shop-name">店舗名</th>
              <th class="th-shop-prefecture">都道府県</th>
              <th class="th-shop-delivery-days">配送日数</th>
            </tr>
            <tr>
              <th class="th-shop-name">店舗名</th>
              <th class="th-shop-prefecture">都道府県</th>
              <th class="th-shop-delivery-days">配送日数</th>
            </tr>
            <% @shops.each do |shop|%>
              <% if shop.id == @shop.id %>
                <div class="item-form-and-error">
                  <%= form_with model: [@company, @shop], url: company_shop_path, local: true do |f| %>
                    <%= render "items/error_messages", model: f.object %>
                    <tr>
                      <td><%= f.text_field :name, class:"shop-code-form shop-form" %></td>
                      <td><%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"shop-prefecture-form shop-form"}) %></td>
                      <td><%= f.number_field :delivery_days, min:1, class:"shop-delivery-days-form shop-form" %></td>
                      <td><%= f.submit "確定" %></td>
                    </tr>
                  <% end %>
                </div>
              <% else %>
                <tr>
                  <td><%= shop.name %></td>
                  <td><%= shop.prefecture.name %></td>
                  <td><%= shop.delivery_days %></td>
                  <td><%= link_to "編集", edit_company_shop_path(id: shop.id) %></td>
                </tr>
              <% end%>
            <% end %>
          </table>
        <% else %>
          <p>登録店舗なし</p>
        <% end %>
      </div>

    </div>
  </div>
</div>