<div class="side-header">
  <div class="app-name">
    在庫管理BULK
  </div>
</div>

<div class="side-contents">
  <div class="side-item content">
    <div class="side-item-header">
      商品
    </div>
    <div class="side-item content-btn">
      <ul>
        <li><%=link_to '一覧表示', items_path %></li>
        <li><%=link_to '登録', new_item_path %></li>
      </ul>
    </div>
  </div>

  <div class="side-item content">
    <div class="side-item-header">
      企業・店舗
    </div>
    <div class="side-item content-btn">
      <ul>
        <li><%=link_to '一覧表示', companies_path %></li>
        <li><%=link_to '登録', new_company_path %></li>
      </ul>
    </div>
  </div>

  <div class="side-order">
    <div class="side-item-header">
      注文
    </div>
    <div class="side-item content-btn">
      <% if Order.find(1).blank? %>
        <p>注文履歴なし</p>>
      <% else %>
        <ul>
          <li><%=link_to '一覧表示', company_shop_orders_path(item_id: Order.find(1).item_id, shop_id: Order.find(1).shop_id, company_id: Order.find(1).shop.company_id) %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>