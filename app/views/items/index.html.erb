<div class="wrapper">
  <div class= "side-bar">
    <%= render "side_bar"%>
  </div>

  <div class="item-display">
    <div class="item-header">
      <div class="item-header-title">
        商品 > 一覧表示
      </div>
      <div class="item-indicate-btn">
        <ul>
          <li class="lightblue", id="sort-by-code">コード順表示</li>
          <li id="sort-by-category">カテゴリー別表示</li>
          <li id="sort-creation-list">発注リスト表示</li>
        </ul>
      </div>
    </div>

    <div class="item-display-contents">

      <div class="sort-by-code", id="sort-by-code-display">
        <% @items.each do |item|%>
          <% if item.stock <= (item.monthly_sales * 0.1)+ 3 %>
            <div class="item-distplay-content red">
              <%= item.category.name %>
              <%= item.code%>
              <%= item.name%>
              <%= item.stock%>
              <%= item.monthly_sales%>
              <%= item.creation_days%>
            </div>
          <% elsif item.stock <= item.monthly_sales * 0.5 %>
            <div class="item-distplay-content yellow">
              <%= item.category.name %>
              <%= item.code%>
              <%= item.name%>
              <%= item.stock%>
              <%= item.monthly_sales%>
              <%= item.creation_days%>
            </div>
          <% else %>
            <div class="item-distplay-content">
              <%= item.category.name %>
              <%= item.code%>
              <%= item.name%>
              <%= item.stock%>
              <%= item.monthly_sales%>
              <%= item.creation_days%>
            </div>
          <%end%>
        <% end %>
      </div>

      <div class="sort-by-category", id="sort-by-category-display">
        <% Category.all.where.not(id:1).each do |category|%>
          <div class="category-name">
            <%= category.name %>
          </div>
          <% @items.each do |item| %>
            <%if item.category.name == category.name %>
              <div class="item-distplay-content">
                <%= item.code %>
                <%= item.name %>
                <%= item.stock %>
                <%= item.monthly_sales %>
                <%= item.creation_days %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="sort-creation-list", id="sort-creation-list-display">
        <div class="creation-list-title">
          最優先発注依頼リスト
        </div>
        <% @items.each do |item|%>
          <% if item.stock <= (item.monthly_sales * 0.1)+ 3 %>
            <div class="item-distplay-content">
              <%= item.category.name %>
              <%= item.code%>
              <%= item.name%>
              <%= item.stock%>
              <%= item.monthly_sales%>
              <%= item.creation_days%>
            </div>
          <% end %>
        <% end %>
        <div class="creation-list-title">
          発注依頼リスト
        </div>
        <% @items.each do |item|%>  
          <% if (item.stock <= item.monthly_sales * 0.5) && (item.stock > (item.monthly_sales * 0.1)+ 3) %>
            <div class="item-distplay-content">
              <%= item.category.name %>
              <%= item.code%>
              <%= item.name%>
              <%= item.stock%>
              <%= item.monthly_sales%>
              <%= item.creation_days%>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>