<div class="wrapper">
  <div class= "side-bar">
    <%= render "items/side_bar" %>
  </div>

  <div class="main-display">
    <div class="top-display">
      <div class="top-display-title">
        企業 > 登録
      </div>
      <div class="item-form-and-error">
        <%= form_with model: @company, local: true do |f| %>
          <%= render "items/error_messages", model: f.object %>
          <ul class="item-form">
            <li><p>企業名</p><%= f.text_field :name %></li>
            <li><%= f.submit "登録", class:"item-form-btn"%></li>
          </ul>
        <% end %>
      </div>
    </div>

    <div class="lower-display">

      <div class="sort-by-code", id="sort-by-code-display">
        <%if @companies %>
          <% @companies.each do |company|%>
            <div class="company-display-content">
              <%= company.name %>
              <%=link_to "店舗登録", new_company_shop_path(company.id) %>
              <%=link_to "編集", edit_company_path(company.id) %>
              <%=link_to "削除", company_path(company.id), method: :delete  %>
            </div>
            <div class="shop-display-contents">
                <% @shops.each do |shop|%>
                  <% if shop.company_id == company.id %>
                    <div class="shop-display-content">
                      <%= shop.name %>
                      <%= shop.prefecture.name %>
                      <%= shop.delivery_days %>
                    </div>
                  <% end %>
                <% end %>
              </div>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>