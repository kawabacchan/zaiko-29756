<div class="wrapper">
  <div class= "side-bar">
    <%= render "items/side_bar"%>
  </div>

  <div class="main-display">
    <div class="top-display">
      <div class="top-display-title">
        注文 > 一覧表示
      </div>
    </div>

    <div class="lower-display">
      <div class="order-display-content">
        <% @orders.each do |order| %>
          <ul>
            <li><%= order.shop.company.name %></li>
            <li><%= order.shop.name %></li>
            <li><%= order.item.name %></li>
            <li><%= order.sales_numbers %></li>
            <li><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></li>
            <% if order.created_at >= Date.today %>
              <li><%= link_to '削除',company_shop_order_path(id: order.id), method: :delete %></li>
            <% end%>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>