<div class="item-display-contents">

  <div class="sort-by-code", id="sort-by-code-display">
    <% @items.each do |item|%>
      <% if item.stock <= (item.monthly_sales * 0.1)+ 3 %>
        <div class="item-distplay-content red">
          <%= item.category.name %>
          <%= item.code%>
          <%= item.name%>
          <%= item.stock%>
          <%= item.monthly_sales%>
          <%= item.creation_days%>
        </div>
      <% elsif item.stock <= item.monthly_sales * 0.5 %>
        <div class="item-distplay-content yellow">
          <%= item.category.name %>
          <%= item.code%>
          <%= item.name%>
          <%= item.stock%>
          <%= item.monthly_sales%>
          <%= item.creation_days%>
        </div>
      <% else %>
        <div class="item-distplay-content">
          <%= item.category.name %>
          <%= item.code%>
          <%= item.name%>
          <%= item.stock%>
          <%= item.monthly_sales%>
          <%= item.creation_days%>
        </div>
      <%end%>
    <% end %>
  </div>

  <div class="sort-by-category", id="sort-by-category-display">
    <% Category.all.where.not(id:1).each do |category|%>
      <%= category.name %>
      <% @items.each do |item|%>
        <%if item.category.name == category.name %>
          <div class="item-distplay-content">
            <%= item.code%>
            <%= item.name%>
            <%= item.stock%>
            <%= item.monthly_sales%>
            <%= item.creation_days%>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="sort-creation-list", id="sort-creation-list-display">
    <% @items.each do |item|%>
      <% if item.stock <= item.monthly_sales * 0.5 %>
        <div class="item-distplay-content">
          <%= item.category.name %>
          <%= item.code%>
          <%= item.name%>
          <%= item.stock%>
          <%= item.monthly_sales%>
          <%= item.creation_days%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>